<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--SessionFactoryProvide-->
    <bean id="sessionFactoryProvider"
          class="com.revenat.serviceLayer.dataAPI_HibernateImpl.sessionFactoryProviderImpl.SessionFactoryProviderImpl"/>

    <!--UserDaoFactory-->
    <bean id="userDaoFactory"
          class="com.revenat.serviceLayer.dataAPI_HibernateImpl.userDaoHibernateImpl.UserDaoFactoryImpl"/>

    <!--UserServiceHibernateImpl-->
    <bean id="userServiceHibernate"
          class="com.revenat.serviceLayer.dataAPI_HibernateImpl.userServiceHibernateImpl.UserServiceHibernateImpl">
        <constructor-arg name="sessionFactoryProvider" ref="sessionFactoryProvider"/>
        <constructor-arg name="daoFactory" ref="userDaoFactory"/>
    </bean>


</beans>